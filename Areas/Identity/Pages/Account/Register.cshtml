@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid p-0">
    <div class="row my-3 mx-5 mt-5">
        <div class="col text-center d-none d-md-block pt-5">
            <img src="/img/kappa_logo.svg" style="width: 200px;">
            <h1 class="text-primary" style="font-size: 4rem;">Kappa</h1>
        </div>
        <div class="col-12 col-md-7 col-xl-5">
            <div class="card" style="max-width: 30rem;">
                <div class="card-body">
                    <h1>Sign Up</h1>
                    <p>It's quick and easy.</p>
                    <hr>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="row">
                            <div class="col col-12 col-md-6">
                                <input asp-for="Input.FirstName" class="form-control mt-3 shadow-sm" style="max-width: 30rem;" placeholder="First name" autocomplete="First name" aria-required="true" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col col-12 col-md-6">
                                <input asp-for="Input.LastName" class="form-control mt-3 shadow-sm" style="max-width: 30rem;" placeholder="Last name" autocomplete="Last name" aria-required="true" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <input asp-for="Input.Email" class="form-control my-3 shadow-sm" placeholder="E-mail" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <input asp-for="Input.Password" class="form-control my-3 shadow-sm" placeholder="New password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <input asp-for="Input.ConfirmPassword" class="form-control my-3 shadow-sm" placeholder="Comfirm password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <p class="small text-secondary">By clicking Sign Up, you agree to our Terms. Learn how we collect, use and share your data in our Data Policy and how we use cookies and similar technology in our Privacy Policy. </p>

                        <div class="text-center">
                            <button id="registerSubmit" class="btn btn-success px-4" type="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



