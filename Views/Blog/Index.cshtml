@model IEnumerable<KappaPortal.Models.ViewModels.UserPostVM>

<div class="row">
    <div class="col-11">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb ">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="AllBlogs">All blogs</a></li>
                <li class="breadcrumb-item text-truncate active" style="max-width: 200px;" aria-current="page">@ViewBag.blogTitle</li>
            </ol>
        </nav>
    </div>

    <div class="col-1 dropdown dropstart">
        <a class="text-decoration-none float-end" href="#" id="dropdownCalendar" data-bs-toggle="dropdown" aria-expanded="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-calendar-date-fill" viewBox="0 0 16 16">
                <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zm5.402 9.746c.625 0 1.184-.484 1.184-1.18 0-.832-.527-1.23-1.16-1.23-.586 0-1.168.387-1.168 1.21 0 .817.543 1.2 1.144 1.2z" />
                <path d="M16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-6.664-1.21c-1.11 0-1.656-.767-1.703-1.407h.683c.043.37.387.82 1.051.82.844 0 1.301-.848 1.305-2.164h-.027c-.153.414-.637.79-1.383.79-.852 0-1.676-.61-1.676-1.77 0-1.137.871-1.809 1.797-1.809 1.172 0 1.953.734 1.953 2.668 0 1.805-.742 2.871-2 2.871zm-2.89-5.435v5.332H5.77V8.079h-.012c-.29.156-.883.52-1.258.777V8.16a12.6 12.6 0 0 1 1.313-.805h.632z" />
            </svg>
        </a>

        <div class="col-md-3 col-lg-2 dropdown-menu" aria-labelledby="dropdownCalendar">
            @await Component.InvokeAsync("Calendar",ViewBag.BlogId)
        </div>
    </div>


</div>


    @{
        if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <partial name="_PostPartial" model=@item />
            }
        }
        else
        {
            <div class="card mb-3 shadow-sm">
                <h4 class="text-center py-5 text-muted">This blog is empty.</h4>
            </div>
        }
    }

